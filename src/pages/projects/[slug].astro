---
import Layout from '../../layouts/Layout.astro';
import { projects, getProjectBySlug } from '../../data/projects';

export function getStaticPaths() {
	return projects.map(project => ({
		params: { slug: project.slug }
	}));
}

const { slug } = Astro.params;
const project = getProjectBySlug(slug as string);

if (!project) {
	return Astro.redirect('/404');
}
---

<Layout>
	<div class="page project-page">
		<a href="/" class="back-link">‚Üê Back to Portfolio</a>
		
		<article class="project-detail">
			<div class="project-image-container">
				<img src={project.image} alt={project.title} class="project-detail-image" />
			</div>
			
			<div class="project-content">
				<h1 class="project-title">{project.title}</h1>
				
				<div class="project-tech">
					{project.tech.map((tech: string) => (
						<span class="tech-chip">{tech}</span>
					))}
				</div>
				
				<div class="project-description">
					{project.slug === 'wool-transport-monitoring-app' ? (
						<>
							<p>
								I developed a mobile application designed to <span class="highlight">directly connect wool producers with consumers</span>, <span class="highlight">removing the need for intermediaries</span> and ensuring <span class="highlight">fair, transparent pricing</span> for farmers. The core vision of the app is to empower wool producers by giving them a <span class="highlight">direct digital platform</span> to showcase and sell their products without dependency on middlemen.
							</p>
							<p>
								To support farmers in managing their resources effectively, the app includes a <span class="highlight">wool storage management system</span> that helps them organize and track their stored wool. Additionally, using the <span class="highlight">Google Maps API</span>, the application <span class="highlight">automatically detects the user's location</span> and displays <span class="highlight">nearby wool storage facilities</span>, making the process of locating storage centers easier and more efficient.
							</p>
							<p>
								The app also incorporates <span class="highlight">educational modules</span> aimed at improving the knowledge and skills of wool producers. These modules provide valuable insights on <span class="highlight">enhancing wool quality</span>, understanding <span class="highlight">market standards</span>, and increasing competitiveness in the industry. To make the application accessible to users across India, it includes <span class="highlight">multi-language support</span> with Tamil, English, and Hindi.
							</p>
							<p>
								For seamless user management, <span class="highlight">Firebase</span> is used to handle <span class="highlight">authentication</span> and securely store user details during the signup process. The app also features a <span class="highlight">dynamic news feed</span> where wool producers and manufacturers can view daily updates about <span class="highlight">market trends, wool prices, and industry developments</span>. Users can upload their wool or wool-based products to the <span class="highlight">marketplace</span> and browse newly added items from other sellers.
							</p>
							<p>
								Beyond trading and product management, the app offers several community-focused features. Wool producers can <span class="highlight">form groups</span> to share knowledge, collaborate, and build stronger professional relationships. The platform also includes a <span class="highlight">chatbot</span> to assist users with their queries and a <span class="highlight">real-time discussion room</span> where multiple users can communicate live. Overall, the application creates a <span class="highlight">comprehensive digital ecosystem</span> that enhances trading efficiency, encourages community engagement, and supports the growth of the wool industry.
							</p>
						</>
					) : (
						project.description.split('.').filter(p => p.trim()).map((paragraph: string) => (
							<p>{paragraph.trim()}.</p>
						))
					)}
				</div>
			</div>
		</article>
	</div>
</Layout>

<style>
	.project-page {
		max-width: min(90vw, 1000px);
	}
	
	.back-link {
		display: inline-block;
		margin-bottom: clamp(20px, 3vh, 32px);
		color: var(--black);
		text-decoration: none;
		font-size: clamp(14px, 1.5vw, 18px);
		border: 2px dashed var(--black);
		padding: clamp(8px, 1vw, 12px) clamp(12px, 1.5vw, 20px);
		border-radius: 6px;
		transition: all 0.3s ease;
	}
	
	.back-link:hover {
		background: var(--black);
		color: var(--yellow);
		border-style: solid;
		transform: translateX(-4px);
	}
	
	.project-detail {
		display: flex;
		flex-direction: column;
		gap: clamp(24px, 3vh, 40px);
	}
	
	.project-image-container {
		width: 100%;
		border: 3px dashed var(--black);
		padding: clamp(12px, 1.5vw, 20px);
		background: white;
	}
	
	.project-detail-image {
		width: 100%;
		height: auto;
		object-fit: cover;
		border: 3px solid var(--black);
		display: block;
	}
	
	.project-content {
		display: flex;
		flex-direction: column;
		gap: clamp(16px, 2vh, 24px);
	}
	
	.project-title {
		font-size: clamp(32px, 5vw, 56px);
		font-weight: normal;
		margin: 0;
		line-height: 1.2;
		border-bottom: 3px dashed var(--black);
		padding-bottom: clamp(12px, 1.5vh, 20px);
	}
	
	.project-tech {
		display: flex;
		flex-wrap: wrap;
		gap: clamp(8px, 1vw, 12px);
	}
	
	.tech-chip {
		padding: clamp(8px, 1vw, 12px) clamp(14px, 1.5vw, 20px);
		border: 2px dashed var(--black);
		border-radius: 6px;
		font-size: clamp(13px, 1.3vw, 16px);
		background: transparent;
		transition: all 0.2s;
	}
	
	.tech-chip:hover {
		background: var(--yellow);
		border-style: solid;
		transform: translateY(-2px);
	}
	
	.project-description {
		font-size: clamp(15px, 1.7vw, 20px);
		line-height: 1.8;
		color: var(--black);
		opacity: 0.9;
		text-align: justify;
	}
	
	.project-description p {
		margin-bottom: clamp(16px, 2vh, 24px);
	}
	
	.project-description p:last-child {
		margin-bottom: 0;
	}
	
	.highlight {
		background: linear-gradient(120deg, rgba(204, 153, 0, 0.3) 0%, rgba(204, 153, 0, 0.2) 100%);
		padding: 2px 4px;
		border-radius: 3px;
		font-weight: 600;
		color: var(--black);
	}
	
	@media (max-width: 780px) {
		.project-detail {
			gap: clamp(20px, 2.5vh, 32px);
		}
		
		.project-image-container {
			padding: clamp(10px, 1.2vw, 16px);
		}
	}
</style>

